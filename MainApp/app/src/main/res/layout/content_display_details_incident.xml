<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="me.myapplication.DisplayDetailsIncidentActivity"
    tools:showIn="@layout/activity_display_details_incident">

    <android.support.constraint.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="edrtfyg"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/infoDate"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.023" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="30dp"
            android:layout_marginStart="92dp"
            android:visibility="gone"

            android:contentDescription="incident"
            app:layout_constraintBottom_toTopOf="@+id/description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/infoDate" />

        <TextView
            android:id="@+id/infoDate"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:text="Incident posté par Mathieu le 25/03/26 à 23h23"
            android:textSize="11sp"
            app:layout_constraintBottom_toTopOf="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titleDetail" />
        <VideoView
            android:id="@+id/VideoView"
            android:layout_width="200dp"
            android:layout_height="0dp"
            android:layout_marginBottom="244dp"
            android:layout_marginTop="32dp"
            android:contentDescription="incident"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/sendComm"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/description"
            android:layout_width="251dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginEnd="85dp"
            android:layout_marginStart="114dp"
            android:text="C LA DESCRIPTION DE L'INCIDENT"
            app:layout_constraintBottom_toTopOf="@+id/commentTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <EditText
            android:id="@+id/commentTitle"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="138dp"
            android:layout_marginStart="16dp"
            android:inputType="text|textMultiLine"
            android:hint="Ajouter un commentaire..."
            app:layout_constraintBottom_toTopOf="@+id/nestedScrollView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/description" />

        <Button
            android:id="@+id/sendComm"
            android:layout_width="91dp"
            android:layout_height="56dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="28dp"

            android:text="Envoyer"
            app:layout_constraintLeft_toRightOf="@+id/sendComm"
            app:layout_constraintStart_toEndOf="@+id/commentTitle"
            app:layout_constraintTop_toBottomOf="@+id/description"
            tools:ignore="NotSibling" />

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            app:layout_constraintTop_toBottomOf="@id/commentTitle"
            >

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="674dp" />
        </android.support.v4.widget.NestedScrollView>

    </android.support.constraint.ConstraintLayout>
</ScrollView>

