<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AssignationActivity">

    <Button
        android:id="@+id/select_start_time"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="148dp"
        android:text="Heure de début"
        android:textAppearance="@style/TextAppearance.AppCompat" />

    <TextView
        android:id="@+id/selected_start_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/select_end_time"
        android:layout_below="@+id/select_start_time"
        android:text="Choisir une heure"
        android:textStyle="bold" />

    <Button
        android:id="@+id/select_end_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/select_start_time"
        android:layout_marginEnd="42dp"
        android:text="Heure de fin"
        android:textAppearance="@style/TextAppearance.AppCompat" />

    <TextView
        android:id="@+id/selected_end_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/select_start_time"
        android:layout_marginStart="30dp"
        android:text="Choisir une heure"
        android:textStyle="bold" />

    <Button
        android:id="@+id/select_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/selected_date"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-110dp"
        android:text="Choisir une date"
        android:textAppearance="@style/TextAppearance.AppCompat" />

    <TextView
        android:id="@+id/selected_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:text="Date"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/titre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="Assigner une tâche"
        android:textStyle="bold" />

    <Button
        android:id="@+id/send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:text="Envoyer"
        android:textAppearance="@style/TextAppearance.AppCompat" />

    <fragment
        android:id="@+id/fragment"
        android:name="me.myapplication.Fragments.SelectionFragment"
        android:layout_width="match_parent"
        android:layout_height="194dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/selected_start_time" />

</RelativeLayout>